<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/access_description"
        android:id="@+id/descText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|italic" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userField"
        android:hint="@string/access_user"
        android:inputType="text"
        android:typeface="monospace"
        android:layout_below="@+id/descText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passField"
        android:layout_below="@+id/userField"
        android:layout_alignLeft="@+id/userField"
        android:layout_alignStart="@+id/userField"
        android:layout_alignRight="@+id/userField"
        android:layout_alignEnd="@+id/userField"
        android:password="true"
        android:hint="@string/access_pass" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/access_login_button"
        android:id="@+id/loginButton"
        android:onClick="onLoginButtonClick"
        android:layout_below="@+id/passField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>