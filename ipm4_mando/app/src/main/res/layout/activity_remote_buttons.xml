<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/remoteLayout">
        <ImageButton
            style="?android:borderlessButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/playButton"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/play"
            android:contentDescription="@string/play_desc"
            android:onClick="onPlayButtonClick"/>

        <ImageButton
            style="?android:borderlessButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/pauseButton"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/pause"
            android:contentDescription="@string/stop_desc"
            android:onClick="onPauseButtonClick"/>
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@android:id/list"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/remoteLayout"
        android:layout_above="@+id/buttonLayout"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/buttonLayout"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_video"
            android:id="@+id/addButton"
            android:layout_weight="1"
            android:onClick="onAddVideoClick"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/remove_video_text"
            android:id="@+id/removeButton"
            android:layout_weight="1"
            android:onClick="onRemoveVideoClick"/>
    </LinearLayout>

</RelativeLayout>